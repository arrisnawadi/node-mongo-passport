extends layout

block content
  .container.mt-5
    .row
      .col-md-6.m-auto
        .card.card-body
          h3.text-center.mb-3= title

          if sessionFlash && sessionFlash.message
            div(class='alert alert-'+sessionFlash.type+' alert-dismissible fade show', role='alert')
              strong #{ sessionFlash.message }
              button.close(type='button', data-dismiss='alert', aria-label='Close')
                span(aria-hidden='true') &times;

          form(method='POST' action='')
            .form-group
              label(for='email') Email
              input.form-control#email(type='email', name='email' placeholder='Enter email' required)
                        
            .form-group
              label(for='password') Password
              input.form-control#password(type='password', name='password' placeholder='Password' required)
                
            button.btn.btn-success.btn-block(type='submit') Login

          p.mt-4 Don't have an account? 
            a(href='/register') Register